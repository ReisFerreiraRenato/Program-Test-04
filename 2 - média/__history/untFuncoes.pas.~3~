unit untFuncoes;

interface

function CalcularResto(prmValor: Integer; var prmResto: Integer; prmDivisor: Integer): Integer;

implementation

function CalcularResto(prmValor: Integer; var prmResto: Integer; prmDivisor: Integer): Integer;
var LocAux: Integer;
    LocDouble: Double;
begin
  LocDouble := prmValor / prmDivisor;
  LocAux := prmValor - (prmDivisor*trunc(LocDouble));
end;

end.
